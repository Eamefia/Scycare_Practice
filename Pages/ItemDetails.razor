@code{
    [Parameter]
    public string Id { get; set; }
    ItemModel Item = new ItemModel();
    protected override async Task OnInitializedAsync()
    {
        Item = await Task.Run(() => itemservice.GetItemAsync(Guid.Parse(Id)));
    }

    }
